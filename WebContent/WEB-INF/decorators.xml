<?xml version="1.0" encoding="utf-8"?>
<decorators defaultdir="/">
	<!-- 此处用来定义不需要过滤的页面 -->
	<excludes>
		<pattern>/login/*</pattern>
		<pattern>/pages/menu_template/saveresult.jsp</pattern>
		<pattern>/pages/menu_loginout/*</pattern>
		<pattern>/panel/*.html</pattern>
	</excludes>

	<!-- 用来定义装饰器要过滤的页面 -->
	<decorator name="main" page="/pages/decorators/main.jsp">
		<pattern>/index.jsp</pattern>
		<pattern>/dynamicform.jsp</pattern>
        <pattern>/pages/*.jsp</pattern>
        <pattern>/datainput/data*.action</pattern>
	</decorator>
</decorators>  
